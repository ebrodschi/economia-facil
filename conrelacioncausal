    function relacioninv ($var1,$var2) {
            
    
          
    if ($var1 == 2) {$var2 = 1;
    
        
        
           } 
         elseif ($var1 == 1) { $var2 = 2; 
         
         
         }  
         
         return $var2;
         
            }
    
    function relacionpos ($var1,$var2) {
            
    
          
    if ($var1 == 2) {$var2 = 2;
        
        
           } 
         elseif ($var1 == 1) { $var2 = 1;  
         
        
         }  
         
         return $var2; 
         
            }

function relacioncausal ($var1,$nomvar1) {
            
    
          
    if ($var1 <>  0) {return $nomvar1;
        
        
           } 
         
          
         
            }

 

    
    function itera($variables,$tiempo) {
    
    $variables["salario"][$tiempo+1][0]=relacioninv($variables["precio"][$tiempo][0],$variables["salario"][$tiempo+1][0]);
    
   
   $variables["salario"][$tiempo+1][1]=relacioncausal($variables["precio"][$tiempo][0],$variables["precio"][0]);
    
    $variables["consumo"][$tiempo+1][0]=relacionpos($variables["salario"][$tiempo][0],$variables["consumo"][$tiempo+1][0]);
    
    $variables["consumo"][$tiempo+1][1]=relacioncausal($variables["salario"][$tiempo][0],$variables["salario"][0]);
    
    
    
    $variables["ingempresas"][$tiempo+1][0]=relacionpos($variables["consumo"][$tiempo][0],$variables["ingempresas"][$tiempo+1][0]);
    
$variables["ingempresas"][$tiempo+1][1]=relacioncausal($variables["consumo"][$tiempo][0],$variables["consumo"][0]);    

    $variables["ingpublicos"][$tiempo+1][0]=relacionpos($variables["consumo"][$tiempo][0],$variables["ingpublicos"][$tiempo+1][0]);
    
    $variables["ingpublicos"][$tiempo+1][1]=relacioncausal($variables["consumo"][$tiempo][0],$variables["consumo"][0]);
   
    
    $variables["ahorrofam"][$tiempo+1][0]=relacionpos($variables["salario"][$tiempo][0],$variables["ahorrofam"][$tiempo+1][0]);
    
    $variables["ahorrofam"][$tiempo+1][1]=relacioncausal($variables["salario"][$tiempo][0],$variables["salario"][0]);

    
return $variables ;

} 
          
